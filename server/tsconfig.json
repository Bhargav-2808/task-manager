{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "build",
      "rootDir": "src",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUncheckedIndexedAccess": false,
      "exactOptionalPropertyTypes": false
    },
  
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  